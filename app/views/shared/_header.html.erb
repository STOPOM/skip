<div id="header">
  <div id="global_top">
    <%= application_link %>
    <div id="menu">
      <b><%= user_name_mode?(:code) ? "#{h(Admin::Setting.login_account)} : #{h(@current_user.code)}" : "#{_('Admin::UserUid|Uid')} : #{h(@current_user.uid)}" %></b>
      |
      <%= link_to "自分の管理", :controller => "/mypage", :action => :manage, :only_path => false %>
      |
      <% help_url = h(Admin::Setting.help_url) -%>
      <% unless help_url.blank? -%>
      <a href="<%= help_url %>" target="_blank">ヘルプ</a>
      |
      <% end -%>
      <%= link_to "ログアウト", :controller => "/platform", :action => :logout, :only_path => false -%>
      <br style="clear: left" />
    </div>
  </div>
  <%= header_logo_link %>
  <div class="banner"></div>

  <% if SkipEmbedded::InitialSettings['full_text_search_setting'] %>
  <div id="search">
    <% form_tag({:controller => '/search', :action => 'full_text_search'},{:method => 'get'}) do -%>
    <input type="text" size="30" onfocus="if(this.value=='検索したいキーワードをいれてください'){this.style.color='#000000'; this.value = ''}" onblur="if(this.value==''){this.style.color='#999999'; this.form.reset()}" style="color: rgb(153, 153, 153); font-size: 13px; border: 1px solid silver;" id="full_text_query" name="full_text_query" value="検索したいキーワードをいれてください" />
    <%= submit_tag '検索' -%>
    <% end -%>
  </div>
  <% end %>
</div><!-- header -->
